import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.ArrayList;

public class CafeOrderApp extends JFrame {
    private JTextField nameField, itemField, quantityField;
    private JTextArea orderDisplay;
    private ArrayList<String> orders = new ArrayList<>();

    public CafeOrderApp() {
        setTitle(" Cafe Order Management");
        setSize(500, 600);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        setLayout(new BorderLayout());

        // Header
        JLabel header = new JLabel("Welcome to Java Beans CafÃ©!", JLabel.CENTER);
        header.setFont(new Font("Serif", Font.BOLD, 24));
        header.setForeground(new Color(139, 69, 19));
        add(header, BorderLayout.NORTH);

        // Form Panel
        JPanel formPanel = new JPanel(new GridLayout(6, 1, 10, 10));
        formPanel.setBorder(BorderFactory.createEmptyBorder(20, 40, 20, 40));
        formPanel.setBackground(new Color(255, 248, 220));

        nameField = new JTextField();
        itemField = new JTextField();
        quantityField = new JTextField();

        formPanel.add(new JLabel("Customer Name:"));
        formPanel.add(nameField);
        formPanel.add(new JLabel("Item Ordered:"));
        formPanel.add(itemField);
        formPanel.add(new JLabel("Quantity:"));
        formPanel.add(quantityField);

        add(formPanel, BorderLayout.CENTER);

        // Button Panel
        JPanel buttonPanel = new JPanel();
        JButton submitBtn = new JButton("Place Order");
        submitBtn.setBackground(new Color(210, 105, 30));
        submitBtn.setForeground(Color.WHITE);
        submitBtn.setFont(new Font("SansSerif", Font.BOLD, 16));
        buttonPanel.add(submitBtn);
        add(buttonPanel, BorderLayout.SOUTH);

        // Order Display
        orderDisplay = new JTextArea();
        orderDisplay.setEditable(false);
        orderDisplay.setFont(new Font("Monospaced", Font.PLAIN, 14));
        orderDisplay.setBackground(new Color(245, 245, 220));
        add(new JScrollPane(orderDisplay), BorderLayout.EAST);

        // Action Listener
        submitBtn.addActionListener(e -> {
            String name = nameField.getText().trim();
            String item = itemField.getText().trim();
            String quantity = quantityField.getText().trim();

            if (name.isEmpty() || item.isEmpty() || quantity.isEmpty()) {
                JOptionPane.showMessageDialog(this, "Please fill in all fields.", "Input Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            String order = String.format(" %s ordered %s x%s", name, item, quantity);
            orders.add(order);
            orderDisplay.append(order + "\n");

            nameField.setText("");
            itemField.setText("");
            quantityField.setText("");
        });
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> new CafeOrderApp().setVisible(true));
    }
}
